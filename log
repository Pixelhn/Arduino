
arduino-cli sketch new MyFirstSketch

arduino-cli compile --fqbn esp8266:esp8266:nodemcu uno/

arduino-cli compile --fqbn arduino:avr:uno uno/

arduino-cli upload -p /dev/ttyACM0 --fqbn arduino:avr:uno  uno/

arduino-cli upload -p /dev/ttyUSB0 --fqbn esp8266:esp8266:nodemcu uno/

./arduino-cli completion bash > arduino-cli.sh
sudo mv arduino-cli.sh /etc/bash_completion.d/